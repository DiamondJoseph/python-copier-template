{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "packageRules": [
    {
      "groupName": "Templated CI",
      "matchManagers": [
        "github-actions"
      ],
      "description": [
        "Group and update GitHub actions through the copier template to prevent merge conflicts"
      ],
      "automerge": true
    }
  ]
}
